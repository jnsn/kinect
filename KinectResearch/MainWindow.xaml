<Window
  x:Class="KinectResearch.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cal="http://www.codeplex.com/CompositeWPF"
  Title="MainWindow" Height="360" Width="1280">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.70*"/>
      <ColumnDefinition Width="0.30*"/>
    </Grid.ColumnDefinitions>

    <Border Grid.Column="1" CornerRadius="4,4,4,4" BorderBrush="#193441" Background="#FCFFF5" BorderThickness="2,2,2,2" Margin="5" Padding="5">
      <ContentControl 
		  x:Name="RightRegionControl"
		  HorizontalContentAlignment="Stretch"
		  VerticalContentAlignment="Stretch"
		  cal:RegionManager.RegionName="RightRegion"/>
    </Border>

  </Grid>
</Window>
